{
  "version": 2,
  "functions": {
    "api/**": {
      "excludeFiles": "{client/**,server/**,ml_service/**,notebooks/**,notebooks/model_training.ipynb}"
    }
  },
  "rewrites": [
    {
      "source": "/api/predict",
      "destination": "api/predict.py"
    },
    {
      "source": "/api/(.*)",
      "destination": "api/index.js"
    }
  ]
}